{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Synergy-AIVM Model Manifest v1",
  "description": "Manifest schema for AI models deployed on Synergy-AIVM",
  "type": "object",
  "properties": {
    "model_id": {
      "type": "string",
      "description": "Unique identifier for the AI model"
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Semantic version of the model"
    },
    "author": {
      "type": "string",
      "description": "Author or organization maintaining the model"
    },
    "license": {
      "type": "string",
      "description": "License under which the model is distributed"
    },
    "input_schema": {
      "type": "object",
      "description": "JSON Schema describing expected inputs"
    },
    "output_schema": {
      "type": "object",
      "description": "JSON Schema describing expected outputs"
    },
    "dependencies": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "version": {
            "type": "string"
          }
        },
        "required": [
          "name",
          "version"
        ]
      },
      "description": "List of runtime dependencies for the model"
    },
    "entrypoint": {
      "type": "string",
      "description": "Path to the main executable or inference function"
    },
    "resources": {
      "type": "object",
      "properties": {
        "cpu": {
          "type": "number"
        },
        "gpu": {
          "type": "number"
        },
        "memory_mb": {
          "type": "number"
        }
      },
      "required": [
        "cpu",
        "memory_mb"
      ]
    },
    "checksum": {
      "type": "string",
      "description": "SHA256 checksum of the model file"
    },
    "description": {
      "type": "string"
    },
    "created_at": {
      "type": "string",
      "format": "date-time"
    },
    "updated_at": {
      "type": "string",
      "format": "date-time"
    }
  },
  "required": [
    "model_id",
    "version",
    "author",
    "license",
    "input_schema",
    "output_schema",
    "entrypoint",
    "resources",
    "checksum"
  ]
}
